<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Enable directory browsing -->
        <directoryBrowse enabled="true" />

        <!-- Security settings -->
        <security>
            <requestFiltering>
                <denyUrlSequences>
                    <add sequence="../" />
                </denyUrlSequences>
            </requestFiltering>
        </security>
    </system.webServer>
</configuration>
